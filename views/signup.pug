extends base

block content
  main.main
    .signup-form
      h2.heading-secondary.ma-bt-lg Créer votre compte
      form.form.form--signup
        .form__group
          label.form__label(for='name') Votre nom
          input#name.form__input(type='text', placeholder='', required)
        .form__group
          label.form__label(for='email') Votre Email
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Mot de passe
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Confirmez votre mot de passe
          input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')  
        .form__group
          button.btn.btn--green Inscription